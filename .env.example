# Environment variables for Legacy EdTech Backbone
# Copy this file to .env and populate with your actual values
# NEVER commit the .env file to version control

# =============================================================================
# Samba AD Domain Controller
# =============================================================================
REALM=LEGACYEDTECH.LOCAL
DOMAIN=LEGACYEDTECH
ADMIN_PASSWORD=changeme_strong_password_here
DNS_FORWARDER=8.8.8.8

# =============================================================================
# UniFi Network
# =============================================================================
UNIFI_ADMIN_USER=admin
UNIFI_ADMIN_PASS=changeme_unifi_password
DDNS_PROVIDER=no-ip
DDNS_USERNAME=your_ddns_username
DDNS_PASSWORD=changeme_ddns_password
DDNS_HOSTNAME=yoursite.ddns.net

# =============================================================================
# PXE Server
# =============================================================================
PXE_INTERFACE=eth0
PXE_TFTP_ROOT=/srv/tftp
PXE_IMAGE_ROOT=/srv/images
PXE_NFS_ROOT=/srv/nfs
IMAGES_DISK=/dev/sdb1
# Block device to mount at /srv/images for PXE images.
# Override as needed (e.g., /dev/sdd1). Must be ext4.

# =============================================================================
# osTicket (Raspberry Pi 5)
# =============================================================================
OSTICKET_DB_HOST=localhost
OSTICKET_DB_NAME=osticket
OSTICKET_DB_USER=osticket
OSTICKET_DB_PASS=changeme_osticket_db_password
OSTICKET_ADMIN_EMAIL=admin@legacyedtech.local
OSTICKET_API_KEY=changeme_generate_random_api_key

# =============================================================================
# Backup & Monitoring
# =============================================================================
BACKUP_DEST=/srv/backups
BACKUP_RETENTION_DAYS=30
ALERT_EMAIL=alerts@legacyedtech.local
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=changeme_smtp_app_password

# =============================================================================
# Prometheus & Monitoring
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASS=changeme_grafana_password

# =============================================================================
# Security
# =============================================================================
UFW_ALLOW_PORTS=22,53,88,389,445,636,3268,3269
FAIL2BAN_MAXRETRY=5
FAIL2BAN_BANTIME=3600
